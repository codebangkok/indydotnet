@page
@model CloudAgent.Pages.Connections.ViewInvitationModel
@{
    ViewData["Title"] = "View Invitation";
}

<form method="POST">
    <input type="hidden" name="InvitationDetails" value="@Model.InvitationDetails" />
    <div class="card mt-3" style="width: 18rem;">
        <div class="card-header">
            Invitation Details
        </div>
        @*<img class="card-img" src="@Url.Identicon(Model.InvitationMessage.Label, size: 300)" alt="Card image cap">*@
        <img class="card-img" src="@Model.InvitationMessage.ImageUrl" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">@Model.InvitationMessage.Label</h5>
            <p class="card-text"><small class="text-muted">@Model.InvitationMessage.ServiceEndpoint</small></p>
            <button type="submit" class="btn btn-primary" asp-page-handler="AcceptInvitation">Accept Invitation</button>
        </div>
    </div>
</form>